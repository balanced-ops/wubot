# -*- mode: yaml -*-
commands:
  01_setup_ansible:
    command: 'pip install ansible>=1.8,<1.9.0'
    test: '[ ! hash ansible 2>/dev/null ]'

container_commands:
  01_setup_1:
    command: env | logger
  01_setup_2:
    command: pwd | logger
  02_generate_secrets:
    command: >
      ansible-playbook -v --connection=local                 \
                       /var/app/current/assemble-secrets.yml \
                       -e 'secrets_dir=/root'
  03_runit:
    command: >
      docker run --env-file /root/secrets.env -d -t balanced/wubot
